
    @if (User.Identity.IsAuthenticated)
    {
        <form method="post" class="form-inline" asp-page="/Account/Logout/Logout">
            Hello @User.Identity.Name
            <button type="submit" class="ml-2 btn btn-link">Logout</button>
        </form>

    }
    else
    {
        
            <a class="nav-link" asp-page="/Account/Login">Login</a>
        
    }
